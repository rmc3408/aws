{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/node/productsLayer": ["lambda/products/layers/productsLayer/nodejs/repository"],
      "/opt/node/productEventsLayer": ["lambda/products/layers/productEventLayer/nodejs/event-repo"],
      "/opt/node/orderLayer": ["lambda/orders/layers/orderLayer/nodejs/repository"],
      "/opt/node/orderModelsLayer": ["lambda/orders/layers/orderLayer/nodejs/models"],
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
