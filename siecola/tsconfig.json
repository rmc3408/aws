{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@lib/*": ["./lib/*"],
      "/opt/node/productsLayer": ["lambda/products/layers/productsLayer/nodejs/product-repository"],
      "/opt/node/productEventsLayer": ["lambda/products/layers/productEventLayer/nodejs/event-models"],
      "/opt/node/orderLayer": ["lambda/orders/layers/orderLayer/nodejs/order-repository"],
      "/opt/node/orderModelsLayer": ["lambda/orders/layers/orderLayer/nodejs/order-models"],
      "/opt/node/orderEventLayer": ["lambda/orders/layers/orderLayer/nodejs/event-models"],
      "/opt/node/orderEventRepositoryLayer": ["lambda/orders/layers/orderLayer/nodejs/event-repository"],
      "/opt/node/transactionRepositoryLayer": ["lambda/invoices/layers/invoiceLayer/nodejs/transaction"],
      "/opt/node/invoiceRepositoryLayer": ["lambda/invoices/layers/invoiceLayer/nodejs/invoice"],
      "/opt/node/transactionWebScoketLayer": ["lambda/invoices/layers/invoiceLayer/nodejs/websocket"],
      "/opt/node/userInfoLayer": ["lambda/auth/layers/authLayer/nodejs/info"]  
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
